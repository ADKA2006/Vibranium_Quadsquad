# Environment Configuration
# Copy this file to .env and update with your actual values

# ExchangeRate-API (Free Tier: 1,500 requests/month)
# Get your API key at: https://app.exchangerate-api.com/dashboard
EXCHANGE_RATE_API_KEY=YOUR_KEY_HERE

# Go Backend
GO_PORT=8080

# Next.js Frontend
NEXT_PUBLIC_API_URL=http://localhost:8080

# Neo4j
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=plm_ledger

# Redis
REDIS_URL=redis://localhost:6379

# JWT/PASETO - SECURITY: Use strong random 32-byte key in production!
TOKEN_SECRET=your-32-byte-secret-key-here!!!
TOKEN_ISSUER=plm-auth
TOKEN_TTL=24h

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# Receipt Digital Signatures - SECURITY: Use cryptographically random values in production!
RECEIPT_SIGNATURE_KEY=your-receipt-hmac-secret-key-here
USER_ID_SALT=your-random-user-id-salt-here

