# ==============================================================================
# PLM Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your secure values
# NEVER commit .env to version control!
# ==============================================================================

# Database Passwords (REQUIRED - change these!)
NEO4J_PASSWORD=your_secure_neo4j_password_here
POSTGRES_PASSWORD=your_secure_postgres_password_here

# JWT/Token Secret (REQUIRED - must be at least 32 characters)
TOKEN_SECRET=your_secure_jwt_secret_at_least_32_chars

# Admin Account Password (REQUIRED for secure deployment)
ADMIN_PASSWORD=your_secure_admin_password_here
USER_PASSWORD=your_secure_user_password_here

# Optional: Database users (defaults are usually fine)
# NEO4J_USER=neo4j
# POSTGRES_USER=postgres
# POSTGRES_DB=plm_ledger

# Optional: Token settings
# TOKEN_ISSUER=plm-auth
# TOKEN_TTL=24h

# Optional: External API Keys
# EXCHANGE_RATE_API_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_PUBLISHABLE_KEY=
